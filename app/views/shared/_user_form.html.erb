<div class="container">
  <div class="jumbotron">
    <% if flash[:error] %>
      <%= "There was an error" %>
    <% end %>

    <form action="<%= action_url %>" method="post">
      <%= auth_token %>

      <div class="form-group">
        <label for="user-username">Username</label>
        <input type="text"
               class="form-control"
               name="user[username]"
               value="<%= user.username %>"
               id="user-username">
      </div>

      <div class="form-group">
        <label for="user-password">Password</label>
        <input type="password"
               class="form-control"
               name="user[password]"
               value="<%= user.password %>"
               id="user-password">
      </div>

      <input type="submit" value="<%= submit_verb %>">
    </form>
  </div>
</div>
